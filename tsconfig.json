{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./packages",
    "sourceMap": true,
    "strictBindCallApply": true
  },
  "include": ["./packages"],
  "typedocOptions": {
    "name": "ydfe 工具库文档",
    "mode": "library",
    "out": "./docs",
    "includeVersion": true,
    "readme": true,
    "theme": "minimal",
    "inputFiles": ["packages"],
    "exclude": [
      "packages/**/dist",
      "packages/**/coverage",
      "packages/**/node_modules",
      "packages/**/__test__",
      "packages/**/test",
      "packages/**/*+(.spec|.e2e|.test).ts",
      "packages/**/.fatherrc.js"
    ]
  }
}
